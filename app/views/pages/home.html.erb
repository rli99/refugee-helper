<!-- Full Page Image Background Carousel Header -->
<header id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for Slides -->
    <div class="carousel-inner">
        <div class="item active">
            <!-- Set the first background image using inline CSS below. -->
            <div class="fill" style="background-image:url('https://i.guim.co.uk/img/static/sys-images/Guardian/Pix/pictures/2015/9/4/1441377592716/Refugees-Budapest-009.jpg?w=1920&q=85&auto=format&sharp=10&s=67a9872842f591a3c2d3a91dce39eb7e');"></div>
            <div class="carousel-caption">
                <h3>Refugee Crisis in Europe</h3>
            </div>
        </div>
        <div class="item">
            <!-- Set the second background image using inline CSS below. -->
            <div class="fill" style="background-image:url('http://america.aljazeera.com/content/dam/ajamarticles/Syria_Refugee_101713.jpg');"></div>
            <div class="carousel-caption">
                <h3>Syrian Refugees</h3>
            </div>
        </div>
        <div class="item">
            <!-- Set the third background image using inline CSS below. -->
            <div class="fill" style="background-image:url('http://www.zerohedge.com/sites/default/filesuser3303/imageroot/20150903_refugee.jpg');"></div>
            <div class="carousel-caption">
                <h3>European Refugee Crisis "Out of Control"</h3>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="icon-next"></span>
    </a>
</header>


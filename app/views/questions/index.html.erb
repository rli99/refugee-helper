<main id="forum-container">
    <section id="forum-index-container" class="col-xs-12 col-sm-8 col-md-8 col-lg-8 col-sm-offset-2 col-md-offset-2 col-lg-offset-2">
        <%= will_paginate @questions %>
            <table class="table table-striped table-hover ">
                <thead class="forum-question-row">
                    <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">Title</th>
                    <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">Ticket Number</th>
                    <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">Posted Date</th>
                </thead>
                <% @questions.each do |question| %>
                        <tr class="forum-question-row">
                                <td class="forum-question-title"><%= question.title %></td>
                                <td class="forum-question-ticket-id"><%= question.ticket_id %></td>
                                <td class="forum-question-timestamp"><%= question.created_at.strftime("%F") %></td>
                                <td><%= link_to "Answer", question, {class:"btn btn-primary"} %></td>
                        </tr>
                <% end %>
            </table>
        <%= will_paginate @questions %>
    </section>
</main>
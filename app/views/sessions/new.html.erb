<center><h1>Log in</h1></center>

<div class="row">
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xs-offset-3 col-sm-offset-3 col-lg-offset-3 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :user %>
      <%= f.text_field :user, class: 'form-control' %>
      </br>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      </br>
      <%= f.submit "Log in", class: "btn btn-primary pull-right" %>
    <% end %>

    </br>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>